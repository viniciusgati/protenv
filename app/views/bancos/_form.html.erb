<%= form_with(model: banco) do |form| %>
  <% if banco.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(banco.errors.count, "error") %> prohibited this banco from being saved:</h2>

      <ul>
        <% banco.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :tipo, style: "display: block" %>
    <%= form.select :tipo, Banco.tipos.keys.map { |k| [k.humanize, k] }, {}, class: "select" %>
  </div>

  <div>
    <%= form.label :backup, style: "display: block" %>
    <%= form.file_field :backup, direct_upload: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
