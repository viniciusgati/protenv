<div id="<%= dom_id instalacao %>">
  <p>
    <strong>Nome:</strong>
    <%= instalacao.name %>
  </p>

  <p>
    <strong>App Server:</strong>
    <%= instalacao.appserver_binario&.name %>
  </p>

  <p>
    <strong>DB Access:</strong>
    <%= instalacao.dbaccess_binario&.name %>
  </p>

  <p>
    <strong>Banco:</strong>
    <%= instalacao.banco&.name %>
  </p>

  <p style="display:flex; align-items:center; gap:8px;">
    <strong style="margin-right:6px;">Criado por:</strong>
    <% if instalacao.user&.avatar&.attached? %>
      <%= image_tag instalacao.user.avatar, alt: instalacao.user.display_name, style: "width:24px;height:24px;border-radius:50%;object-fit:cover;" %>
    <% end %>
    <span><%= instalacao.user&.display_name %></span>
  </p>
</div>
