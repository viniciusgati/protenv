<%= form_with(model: instalacao) do |form| %>
  <% if instalacao.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(instalacao.errors.count, "error") %> prohibited this instalacao from being saved:</h2>

      <ul>
        <% instalacao.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
