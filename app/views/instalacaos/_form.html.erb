  </div>

  <div>
    <%= form.label :banco_id, 'Banco de Dados', style: "display: block" %>
    <%= form.collection_select :banco_id, Banco.all, :id, :name, include_blank: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
